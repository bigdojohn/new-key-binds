import keyboard

# Function to handle custom keybind
def on_key_event(event):
    if event.name == "a":
        print("Key 'A' pressed!")
    elif event.name == "b":
        print("Key 'B' pressed!")
    elif event.name == "esc":
        print("Escape pressed. Exiting...")
        exit()

# Set the keybinds
keyboard.on_press(on_key_event)

# Start listening for keyboard events
keyboard.wait('esc')  # Exits when escape key is pressed
